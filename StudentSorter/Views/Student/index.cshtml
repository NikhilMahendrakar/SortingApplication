@{
    ViewData["Title"] = "Upload CSV File";
}

<h2>Upload CSV File</h2>

<button type="button" class="btn btn-info" onclick="explainApplication()">
    Explain Application
</button>

<form asp-action="UploadFile" enctype="multipart/form-data" method="post">
    <div class="form-group">
        <input type="file" name="file" class="form-control" />
    </div>
    <div class="form-group">
        <label for="numColumns">Number of Columns:</label>
        <input type="number" name="numColumns" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Upload</button>
</form>

<script>
function explainApplication() {
    alert("This Application allows you to upload a CSV file and specify the number of columns. The CSV sorter will sort the entire CSV file based on one of the columns you specify.");
}
</script>
