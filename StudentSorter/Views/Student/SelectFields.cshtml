@model StudentSorter.ViewModels.SelectFieldsViewModel

@{
    ViewData["Title"] = "Select Sorting Column";
}

<h2>Select Sorting Column</h2>

<form asp-action="SortData" method="post">
    <div class="form-group">
        <label for="sortColumn">Select Column Index to Sort By:</label>
        <select class="form-control" id="sortColumn" name="SortColumn">
            @for (int i = 0; i < Model.NumColumns; i++)
            {
                <option value="@i">Column @i</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Sort Data</button>
</form>
